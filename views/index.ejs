<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do App</title>
  <link rel="stylesheet" href="/style.css">
  <!-- FontAwesome for Bin Icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="container">
    <h1>To-Do List</h1>

    <!-- Add Todo Form -->
    <form action="/add" method="POST">
        <input type="text" name="todoText" placeholder="Enter your task" required>
        <button type="submit">Add</button>
      </form>

    <!-- To-Do Table -->
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Task</th> <!-- New column for Task Text -->
          <th>Completed</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% todos.forEach(function(todo, index) { %>
          <tr class="<%= todo.completed ? 'completed' : '' %>">
            <td><%= index + 1 %></td> <!-- Display the task number -->
            <td><%= todo.text %></td> <!-- Display the task text -->
            <td>
              <form action="/complete" method="POST" style="display:inline;">
                <input type="hidden" name="todoIndex" value="<%= index %>">
                <input type="checkbox" <%= todo.completed ? 'checked' : '' %> onclick="this.form.submit()">
              </form>
            </td>
            <td>
              <form action="/delete" method="POST" style="display:inline;">
                <input type="hidden" name="todoIndex" value="<%= index %>">
                <button type="submit" style="background: none; border: none; cursor: pointer;">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>